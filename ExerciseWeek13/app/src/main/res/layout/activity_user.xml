<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6C5FD"
    tools:context=".UserActivity">

    <ImageView
        android:id="@+id/ivAvatarFull"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingHorizontal="8dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/background_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivAvatarFull">

        <LinearLayout
            android:id="@+id/lnInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_mono"
                android:padding="4dp"
                android:textColor="#B865F3"
                android:textFontWeight="1000"
                android:textSize="30sp"
                tools:text=" Sarah .J " />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:drawableStart="@drawable/ic_username"
                android:drawablePadding="8dp"
                android:fontFamily="@font/roboto_mono"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="sarahhhhh" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginVertical="12dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="16dp"
                android:fontFamily="@font/roboto_mono"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="sarahhhhh" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_marginStart="24dp"                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="12dp"
                android:drawableStart="@drawable/ic_address"
                android:drawablePadding="16dp"
                android:fontFamily="@font/roboto_mono"
                android:padding="8dp"

                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="sarahhhhh" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_marginStart="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="16dp"
                android:layout_marginVertical="12dp"
                android:fontFamily="@font/roboto_mono"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="sarahhhhh" />

            <TextView
                android:id="@+id/tvCompany"
                android:layout_width="match_parent"
                android:layout_marginStart="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="12dp"
                android:drawableStart="@drawable/ic_company"
                android:drawablePadding="16dp"
                android:fontFamily="@font/roboto_mono"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="sarahhhhh" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>